  <div class="container mt-5" style="height: 300px;">
    <h2 class="text-center mb-4" style="font-size: 36px;">Enter Two-Factor Authentication Code</h2>
    <div class="card mx-auto" style="max-width: 750px;">
      <div class="card-body">
        <p class="mb-3">A verification code has been sent to your email/phone. Please enter the code below to continue.</p>
        <form id="twofa-form" asp-controller="Payment" asp-action="PaypalMethods">
          <div class="mb-3">
            <label for="twofa-code" class="form-label">Verification Code</label>
            <input type="text" id="twofa-code" class="form-control" placeholder="Enter Code" required>
          </div>
          <button type="submit" class="btn btn-warning w-100">Verify and Continue</button>
        </form>

        <!-- Resend Code Button (Initially hidden) -->
        <div id="resend-section" class="mt-3">
          <p class="text-danger mb-2">Invalid code. Please try again or click below to resend the code.</p>
          <button id="resend-code" class="btn btn-secondary w-100">Resend Code</button>
        </div>
      </div>
    </div>
  </div>
