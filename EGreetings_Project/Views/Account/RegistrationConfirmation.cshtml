@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container form">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>@ViewData["Title"]</h2>
            <div class="alert alert-info">
                <p>Thank you for registering with us! A confirmation email has been sent to your inbox.</p>
                <p>Please check your email and click the confirmation link to verify your account.</p>
            </div>

            <p>If you don't see the email in your inbox, please check your spam or junk folder.</p>

            <p>
                <a class="btn btn-primary" href="@Url.Action("Login", "Account")">Go to Login</a>
            </p>
        </div>
    </div>
</div>
