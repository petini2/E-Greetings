@model EGreetings_Project.Models.ViewModelAccount.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row w-100 flex flex-col justify-content-center align-items-start">
    <div class="text-center text-black font-bold title mb-3">Login</div>
    <div class="w-100">
        <form asp-action="Login" method="post" enctype="multipart/form-data" class="form">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control input-form" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control input-form" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="float-end">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                    Forgot password?
                </a>
            </div>

            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(async => async.RememberMe)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-submit text-white" />
            </div>

            <p class="text-center mt-2">
                Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register</a>
            </p>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
            </div>

        </form>
    </div>
</div>
