@model EGreetings_Project.Models.ViewModelAccount.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}


<div class="text-center text-black font-bold title mb-4 mt-5">Change Password</div>
<form asp-action="ChangePassword" method="post" class="form">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Token" />

    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" id="NewPassword" asp-for="NewPassword" class="form-control input-form" />
    </div>

    <div class="form-group">
        <label for="ConfirmNewPassword">Confirm Password</label>
        <input type="password" id="ConfirmPassword" asp-for="ConfirmNewPassword" class="form-control input-form" />
    </div>

    <button type="submit" class="btn btn-submit">Change Password</button>
</form>
