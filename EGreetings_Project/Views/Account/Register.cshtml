@model EGreetings_Project.Models.ViewModelAccount.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row w-full h-auto flex flex-col justify-content-center align-items-center mt-5 mb-5">

    <div class="col-md-8">
        <div class="text-center text-black font-bold title mb-3">Register</div>
        <form asp-action="Register" class="form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control input-form" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control input-form" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control input-form" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label"></label>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="true" />
                    <label class="form-check-label">Male</label>
                </div>
                <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="false" />
                    <label class="form-check-label">Female</label>
                </div>
                 <div class="form-check">
                    <input asp-for="Gender" class="form-check-input" type="radio" value="false" />
                    <label class="form-check-label">Others</label>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dob" class="control-label"></label>
                <input asp-for="Dob" class="form-control input-form" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control input-form" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control input-form" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Avatar Image Upload Field -->
            <div class="form-group mb-3">
                <label asp-for="imgAvatar" class="control-label">Avatar Image</label>
                <input asp-for="imgAvatar" type="file" class="form-control" />
                <span asp-validation-for="imgAvatar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-submit" />
            </div>

            <p class="text-center mt-2">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
            </p>

            <div class="text-center btn-back">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3 text-back">Back</a>
            </div>
        </form>
    </div>
</div>

<!-- CSS -->
<style>
   

    /* Căn giữa nội dung của trang */
    .row.justify-content-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Chiều cao toàn bộ màn hình */
    }

    /* Tạo khoảng cách phía trên cho tiêu đề */
    h1, h4 {
        margin-bottom: 20px;
    }

    /* Tạo khoảng cách giữa các trường nhập liệu */
    .form-group {
        margin-bottom: 15px;
    }

    .text-center {
        text-align: center;
    }

    /* Đảm bảo các trường nhập liệu rộng và đẹp */
    .form-control {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Đảm bảo phần liên kết không có gạch dưới */
    .text-decoration-none {
        text-decoration: none;
    }

    /* Tạo khoảng cách giữa các phần tử */
    p, a {
        margin-top: 10px;
    }

</style>
