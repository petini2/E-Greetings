
@{
    ViewData["Title"] = "CheckEmail";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>@ViewData["Title"]</h2>
            <div class="alert alert-info">
                <p>A link to reset password has been sent to your email.</p>
                <p>Please check your email and click the confirmation link to change the password your account.</p>
            </div>


            <p>
                <a class="btn btn-primary" href="@Url.Action("Login", "Account")">Go to Login</a>
            </p>
        </div>
    </div>
</div>

