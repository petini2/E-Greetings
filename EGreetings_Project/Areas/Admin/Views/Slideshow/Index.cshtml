@model IEnumerable<EGreetings_Project.Models.Slider>

@{
  Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="libre-franklin--title primary-color">Slider List</h1>
  <a asp-area="Admin" asp-controller="Slideshow" asp-action="Create">Add new Slider</a>
</div>

<hr />

<div class="container mt-3">
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>SliderTitle</th>
                <th>SliderContent</th>
                <th colspan="2">Action</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {  
              <tr>
                <td>@item.SliderTitle</td>
                <td>@item.SliderContent</td>
                <td>
                  <button type="button" class="btn btn-block btn-outline-primary btn-flat btn-xs"
                          onclick="window.location.href='@Url.Action("Detail", "Slideshow", new { area = "Admin", id = item.SliderId })'">
                    Detail
                  </button>                    
                </td>                  
                <td>
                  <form asp-area="Admin" asp-asp-controller="Slideshow" asp-action="UpdateStatus" method="post">
                    <div class="custom-control custom-switch" data-slider-id="@item.SliderId">
                      <input type="hidden" name="sliderId" value="@item.SliderId" />
                      <input type="hidden" name="status" value="false" />
                      <input type="checkbox" class="custom-control-input" name="status" @(item.IsActive ? "checked" : "") />
                      <label class="custom-control-label">
                        <span class="switch-label">@((item.IsActive ? "Active" : "Deactive"))</span>
                      </label>
                    </div>
                  </form> 
                </td>                  
              </tr>
            }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

@section Scripts {
  <script>
  document.querySelectorAll('.custom-control').forEach(function (control) {
    var sliderId = control.getAttribute('data-slider-id');
    var checkbox = control.querySelector('.custom-control-input');
    var label = control.querySelector('.custom-control-label');
    var span = label.querySelector('span');

    checkbox.id = 'customSwitch' + sliderId;
    label.setAttribute('for', 'customSwitch' + sliderId);
    span.id = 'switchLabel' + sliderId;

    checkbox.addEventListener('change', function () {
      var status = checkbox.checked;
      span.textContent = status ? 'Active' : 'Deactive';

      var hiddenInput = control.querySelector('input[type="hidden"][name="status"]');
      if (hiddenInput) {
        hiddenInput.value = status;
      }

      var form = control.closest('form');
      if (form) {
        form.submit();
      }
    });
  });
  </script>
}
