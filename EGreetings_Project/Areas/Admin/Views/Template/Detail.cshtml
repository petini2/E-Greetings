@model EGreetings_Project.Models.Template

@{
  Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section HeadScripts {
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="libre-franklin--title primary-color">Detail Template</h1>
  <a asp-area="Admin" asp-controller="Template" asp-action="Index" asp-route-id="@ViewData["CategoryId"]">Back to @ViewData["CategoryName"]</a>
</div>

<hr />

<div class="mt-3">
  <dl class="row">
    <dt class="col-sm-2">
      Template Id
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.TemplateId)
    </dd>

    <dt class="col-sm-2">
      Template Name
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.TemplateName)
    </dd>

    <dt class="col-sm-2">
      Category Name
    </dt>
    <dd class="col-sm-10">
      @ViewData["CategoryName"]
    </dd>     

    <dt class="col-sm-2">
      Price
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Price)
    </dd>

    <dt class="col-sm-2">
      Discounts
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Discounts)
    </dd>

    <dt class="col-sm-2">
      Created Date
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.CreatedDate)
    </dd>                                                    

    <dt class="col-sm-2">
      Image Ver
    </dt>
    <dd class="col-sm-10">
      <img src="@Url.Content(Model.ImgVer)" alt="avatar" style="width: 250px; height: 354px;">
    </dd>

    <dt class="col-sm-2">
      Image Hoz
    </dt>
    <dd class="col-sm-10">
      <img src="@Url.Content(Model.ImgHoz)" alt="avatar" style="width: 400px; height: 283px;">
    </dd>

    <dt class="col-sm-2">
      Svg Ver
    </dt>
    <dd class="col-sm-10">
      <img src="@Url.Content(Model.SvgVer)" alt="avatar" style="width: 250px; height: 354px;">
    </dd>

    <dt class="col-sm-2">
      Svg Hoz
    </dt>
    <dd class="col-sm-10">
      <img src="@Url.Content(Model.SvgHoz)" alt="avatar" style="width: 400px; height: 283px;">
    </dd>

    <dt class="col-sm-2">
      Description
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Description)
    </dd>    
  </dl>
</div>

@section Scripts {
}
