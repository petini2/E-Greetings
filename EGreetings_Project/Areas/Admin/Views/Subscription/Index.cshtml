@model IEnumerable<EGreetings_Project.Models.Subscribes>

@{
  Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="libre-franklin--title primary-color">Subscription List</h1>

<hr />

<div class="row mt-3">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>Subscription Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th colspan="2">Action</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {  
              <tr>
                <td>@item.SubName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>
                  <button type="button" class="btn btn-block btn-outline-primary btn-flat btn-xs"
                          onclick="window.location.href='@Url.Action("Edit", "Subscription", new { area = "Admin", id = item.SubscriptionID })'">
                    Edit
                  </button>
                </td>
                <td>
                  <form asp-area="Admin" asp-asp-controller="Subscription" asp-action="UpdateStatus" method="post">
                    <div class="custom-control custom-switch" data-subscription-id="@item.SubscriptionID">
                      <input type="hidden" name="subscriptionID" value="@item.SubscriptionID" />
                      <input type="hidden" name="status" value="false" />
                      <input type="checkbox" class="custom-control-input" name="status" @(item.isActive == true ? "checked" : "") />
                      <label class="custom-control-label">
                        <span class="switch-label">@((item.isActive == true ? "Active" : "Deactive"))</span>
                      </label>
                    </div>
                  </form> 
                </td>                  
              </tr>
            }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script>
  document.querySelectorAll('.custom-control').forEach(function (control) {
    var subscriptionId = control.getAttribute('data-subscription-id');
    var checkbox = control.querySelector('.custom-control-input');
    var label = control.querySelector('.custom-control-label');
    var span = label.querySelector('span');

    checkbox.id = 'customSwitch' + subscriptionId;
    label.setAttribute('for', 'customSwitch' + subscriptionId);
    span.id = 'switchLabel' + subscriptionId;

    checkbox.addEventListener('change', function () {
      var status = checkbox.checked;
      span.textContent = status ? 'Active' : 'Deactive';

      var hiddenInput = control.querySelector('input[type="hidden"][name="status"]');
      if (hiddenInput) {
        hiddenInput.value = status;
      }

      var form = control.closest('form');
      if (form) {
        form.submit();
      }
    });
  });
  </script>
}

