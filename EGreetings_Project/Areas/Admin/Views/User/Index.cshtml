@model IEnumerable<EGreetings_Project.Models.User>

@{
  Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="libre-franklin--title primary-color">User List</h1>

<hr />

<div class="container mt-3">
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>UserName</th>
                <th>Gender</th>
                <th>Email</th>
                <th colspan="3">Action</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {  
              <tr>
                <td>@item.UserName</td>
                <td>@(item.Gender ? "Male" : "Female")</td>
                <td>@item.Email</td>
                <td>
                  <button type="button" class="btn btn-block btn-outline-primary btn-flat btn-xs"
                          onclick="window.location.href='@Url.Action("UserSubscriptionList", "User", new { area = "Admin", userId = item.Id, userName = item.UserName })'">
                    View subscriptions
                  </button>
                </td>
                <td>
                  <button type="button" class="btn btn-block btn-outline-primary btn-flat btn-xs"
                          onclick="window.location.href='@Url.Action("UserTransactionList", "User", new { area = "Admin", userId = item.Id, userName = item.UserName })'">
                    View transactions
                  </button>
                </td>
                <td>
                  <button type="button" class="btn btn-block btn-outline-primary btn-flat btn-xs"
                          onclick="window.location.href='@Url.Action("UserFeedbackList", "User", new { area = "Admin", userId = item.Id, userName = item.UserName })'">
                    View feedbacks
                  </button>
                </td>
              </tr>
            }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
